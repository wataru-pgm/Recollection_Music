<section class="min-h-screen max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
  <div class="text-center pb-12">
    <h1 class="font-bold text-3xl md:text-4xl lg:text-5xl font-heading text-white">
      <%= @user.name %>
    </h1>
  </div>

  <div class="flex justify-center items-center gap-2 my-3">
    <div class="font-semibold text-center mx-4">
      <div class="mb-5">
        <%= image_tag @user.image, class: "rounded-full shadow mx-auto w-48 h-48" if @user.image.present? %>
      </div>
      <p class="text-white">
        <%= link_to "#{@user.followings.count}フォロー", following_user_path(@user), class: "m-3"  %>
        <%= link_to "#{@user.followers.count}フォロワー", follower_user_path(@user) %>
      </p>
    </div>
  </div>

  <div class="flex justify-center gap-2 my-5">
    <% if logged_in? && current_user != @user %>
      <section id="follow-button-<%= @user.id %>">
        <% if current_user.following?(@user) %>
          <%= render 'relationships/unfollow_button', user: @user %>
        <% else %>
          <%= render 'relationships/follow_button', user: @user %>
        <% end %>
      </section>
    <% end %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-6">
    <% @boards.each do |board| %>
      <div class="w-full bg-white rounded-lg sahdow-lg p-10 flex flex-col justify-center items-center">
        <p class="text-3xl font-bold mb-3">
          『<%= link_to board.title, board_path(board) %>』
        </p>
        <% if board.board_image.present? %>
          <%= image_tag board.board_image %>
        <% else %>
          <%= image_tag '/assets/noimage.png' %>
        <% end %>
        <div class="flex ml-3 justify-center">
          <div class="mt-6 mb-5 w-20">
            <%= image_tag(board.song_image) %>
          </div>
          <div class="text-gray-400 text-left m-6">
            <div class="mt-3">
              <i class="fas fa-music"></i>
              <%= board.song_title %>
            </div>
            <div class="mt-1">
              <i class="fas fa-user-alt"></i>
              <%= board.artist %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>