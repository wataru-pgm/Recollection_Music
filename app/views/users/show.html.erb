<div class="w-full bg-gray-800">
  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
    <div class="text-center pb-12">
      <h1 class="font-bold text-3xl md:text-4xl lg:text-5xl font-heading text-white">
        <%= @user.name %>さんの投稿一覧
      </h1>
    </div>

    <div class="flex justify-center items-center gap-2 my-3">
      <div class="font-semibold text-center mx-4">
        <p class="text-black">
          <%= link_to "#{@user.followings.count}フォロー", following_user_path(@user)  %>
          <%= link_to "#{@user.followers.count}フォロワー", follower_user_path(@user) %>
        </p>
      </div>
    </div>

    <div class="flex justify-center gap-2 my-5">
      <% if logged_in? && current_user != @user %>
        <section id="follow-button-<%= @user.id %>">
          <% if current_user.following?(@user) %>
            <%= render 'relationships/unfollow_button', user: @user %>
          <% else %>
            <%= render 'relationships/follow_button', user: @user %>
          <% end %>
        </section>
      <% end %>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-6">
      <div class="w-full bg-gray-900 rounded-lg sahdow-lg p-12 flex flex-col justify-center items-center">
        <% @boards.each do |board| %>
          <div class="mb-4">
            <%= image_tag(board.song_image) %>
          </div>
          <div class="text-center">
            <p class="text-base text-gray-400 font-normal">
              <%= board.song_title %>
            </p>
            <p class="text-base text-gray-400 font-normal mb-3">
              <%= board.artist %>
            </p>
            <p class="text-xl text-white font-bold mb-6">
              <%= link_to board.title, board_path(board) %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>