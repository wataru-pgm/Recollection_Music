<div class="w-full min-h-screen bg-gradient-to-r from-purple-400 to-pink-400">
  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
    <div class="text-center pb-12">
      <h1 class="font-bold text-3xl md:text-4xl lg:text-5xl font-heading text-white">
          フォロワー一覧
      </h1>
    </div>
    <div class="text-center">
      <% if @users.present? %>
        <% @users.each do |user| %>
          <div>
            <%= image_tag user.image, class: "rounded-full shadow mx-auto w-28 h-28" if user.image.present?%>
          </div>
          <div>
            <%= link_to user.name, user_path(user), class: "font-bold"  %>
          </div>
        <% end %>
      <% else %>
        <h2><%= 'フォロワーがいません' %></h2>
      <% end %>
    </div>
  </section>
</div>