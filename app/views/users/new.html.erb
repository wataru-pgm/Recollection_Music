<h1>新規登録ページ</h1>

<%= form_with model: @user, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="form-group">
    <%= f.label :password_cinfirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit "登録する", class: "btn btn-primary" %>
<% end %>
