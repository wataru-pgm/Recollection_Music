<div class="w-full bg-white rounded-lg shadow-lg p-6 flex flex-col justify-center items-center">
  <div class="text-center">
    <%= link_to board.user.name, user_path(board.user), class: "font-bold" %>さんの思い出
    <p class="text-xl font-bold mt-2 mb-3">
      『<%= link_to board.title, "/boards/#{board.id}" %>』
    </p>
    <% if board.board_image.present? %>
      <%= image_tag board.board_image %>
    <% else %>
      <%= image_tag '/assets/noimage.png' %>
    <% end %>
    <div>
      <div class="flex ml-3 justify-center">
        <div class="mt-6 mb-5 w-20">
          <%= image_tag(board.song_image) %>
        </div>
        <div class="text-gray-400 text-left m-6">
          <div class="mt-3">
            <i class="fas fa-music"></i>
            <%= board.song_title %><br>
          </div>
          <div class="mt-1">
            <i class="fas fa-user-alt"></i>
            <%= board.artist %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>