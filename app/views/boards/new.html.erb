<div class="w-full min-h-screen">
  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
    <div class="text-center pb-12">
      <h1 class="font-bold text-3xl md:text-4xl lg:text-5xl font-heading text-white">
        新規投稿フォーム
      </h1>
    </div>

    <div class="w-full bg-white rounded-lg sahdow-lg p-12 flex flex-col justify-center items-center">
      <div class="text-gray-400">
        <i class="fas fa-music"></i>
        <%= @board.song_title %>
      </div>
      
      <div class="mb-3 text-gray-400">
        <i class="fas fa-user-alt"></i>
        <%= @board.artist %>
      </div>

      <div class="mb-5">
        <%= image_tag(@board.song_image) %>
      </div>


      <%= form_with model: @board, local: true do |f| %>
        <div class="form-group">
          <%= f.hidden_field :song_title %>
          <%= f.hidden_field :artist %>
          <%= f.hidden_field :song_image %>
          <%= f.hidden_field :song_player %>
        </div>
        <div class="text-xl font-bold mb-3">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control text-black" %>
        </div>
        <div class="text-xl font-bold mb-2">
          <%= f.label :body %>
          <%= f.text_area :body, class:"form-control text-black" %>
        </div>
        <div class='text-center'>
          <%= f.submit "投稿する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </section>
</div>