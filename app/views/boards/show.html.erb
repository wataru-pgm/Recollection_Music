<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1>投稿詳細ページ</h1>
      <!-- 投稿された内容 -->
      <%= link_to @board.user.name, user_path(@board.user) %>
      <div class="show-song-image">
        <%= image_tag(@board.song_image) %>
      </div>
      <div class="show-song-player">
        <audio controls src="<%= @board.song_player %>"></audio>
      </div>
      <div class="show-song-title">
        <%= @board.song_title %>
      </div>
      <div class="show-song-artist">
        <%= @board.artist %>
      </div>
      <div class="show-title">
        <%= @board.title %>
      </div>
      <div class="show-body">
        <%= @board.body %>
      </div>
      <% if @board.user == current_user %>
        <%= link_to "編集", edit_board_path %>
        <%= link_to "削除", board_path, method: :delete %>
      <% end %>

      <!-- いいね！ボタン -->
      <div class="likes" id="js-like-<%= @board.id %>">
        <%= render 'likes/like', board: @board %>
      </div>

      <!-- コメント記入欄 -->
      <div class="comment-form-area">
        <%= render "comments/form", board: @board, comment: @comment %>
      </div>
      <!-- コメント一覧 -->
      <div class="comments-area">
        <%= render "comments/comments", board: @board, comments: @comments %>
      </div>
    </div>
  </div>
</div>